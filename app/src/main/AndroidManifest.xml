<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.blockchainapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="BLockChainApp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.WalletLogin"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.SendEther"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.GenerateWallet"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.TransactionDetail"
            android:screenOrientation="portrait" />
        <activity android:name=".Activities.AccountDetail"></activity>
    </application>

</manifest>